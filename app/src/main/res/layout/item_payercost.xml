<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/ww"
                android:padding="@dimen/padding_M">

    <android.support.v7.widget.CardView
        android:id="@+id/itemPayerCost_card"
        style="@style/mw"
        android:layout_margin="@dimen/margin_XS"
        app:cardCornerRadius="@dimen/radius_S"
        app:cardElevation="@dimen/elevation_XS">

        <RelativeLayout
            android:id="@+id/itemPayerCost_rl"
            style="@style/ww">

            <TextView
                android:id="@+id/itemPayerCost_textViewName"
                style="@style/ww"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_M"
                android:layout_toLeftOf="@id/itemPayerCost_layoutImage"
                android:gravity="center_horizontal"
                android:text="@string/lorem_1word"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <RelativeLayout
                android:id="@+id/itemPayerCost_layoutImage"
                style="@style/ww"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/margin_S"
                android:paddingLeft="@dimen/padding_S"
                android:paddingRight="@dimen/padding_S">

                <TextView
                    android:id="@+id/itemPayerCost_textInstallments"
                    style="@style/ww"
                    android:layout_centerHorizontal="true"
                    android:text="84"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/itemPayerCost_text"
                    style="@style/ww"
                    android:layout_below="@id/itemPayerCost_textInstallments"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_installments"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>